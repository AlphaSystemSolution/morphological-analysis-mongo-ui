<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="GridPane"
         xmlns="http://javafx.com/javafx/8.0.40">
    <alignment>TOP_CENTER</alignment>
    <hgap>5</hgap>
    <vgap>5</vgap>
    <padding>
        <Insets top="5" bottom="5" left="5" right="5"/>
    </padding>
    <Label text="%groupTranslateX.label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Spinner fx:id="xSpinner" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Slider fx:id="xSlider" showTickMarks="true" showTickLabels="true" majorTickUnit="5" minorTickCount="1"
            blockIncrement="0.5" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="%groupTranslateY.label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Spinner fx:id="ySpinner" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Slider fx:id="ySlider" showTickMarks="true" showTickLabels="true" majorTickUnit="5" minorTickCount="1"
            blockIncrement="0.5" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
</fx:root>