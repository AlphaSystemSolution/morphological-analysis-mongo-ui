	<groupId>com.alphasystem.arabic</groupId>
	<artifactId>morphological-analysis-mongo-ui</artifactId>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-xjc-plugin</artifactId>
				<configuration>
					<xsdOptions>
						<xsdOption>
							<xsd>${basedir}/src/main/resources/treebank.xsd</xsd>
							<bindingFile>${basedir}/src/main/resources/treebank.xjb</bindingFile>
							<extensionArgs>
								<extensionArg>-Xfluent-api</extensionArg>
								<extensionArg>-Xcollection-setter-injector</extensionArg>
							</extensionArgs>
						</xsdOption>
					</xsdOptions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<dependencies>
